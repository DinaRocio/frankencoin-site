---
import Footer from '../components/footer.astro'
import Header from '../components/header.astro'
import '../styles/global.css'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Frankencoin</title>
	</head>
	<body class="min-h-dvh flex flex-col bg-[var(--color-white)] text-[var(--color-neutral-800)]">
		<!-- Header: ya tiene sticky top-0 en su propio componente -->
		<Header />
	
		<!-- Contenido: empuja el footer hacia abajo -->
		<main class="flex-1">
		  <slot />
		</main>
	
		<!-- Footer: siempre al fondo -->
		<Footer />
	  </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
