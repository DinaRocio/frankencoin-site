---
import Button from "../Button/Button.astro";
import NavLink from "../Button/NavLink.astro";

interface Props {
  href: string;
  image: string;
  imageAlt?: string;
  badge: string;
  description: string; // ðŸ‘ˆ ahora array
  linkLabel: string;
}

const {
  href,
  image,
  imageAlt = "",
  badge,
  description,
  linkLabel,
} = Astro.props as Props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="block rounded-lg shadow-md hover:shadow-lg transition"
>
  <div
    class="flex flex-row justify-between lg:flex-row gap-[var(--spacing-l)] p-[var(--spacing-xxl)]"
  >
    <!-- Imagen + Badge -->
    <div class="flex flex-col items-start gap-[var(--spacing-m)]">
      <img
        src={image}
        alt={imageAlt}
        loading="lazy"
        class="max-h-[50px] max-w-[300px]"
      />

      <Button size="md">{linkLabel}</Button>
    </div>

    <!-- Texto -->
    <div
      class="flex flex-col items-start about lg:w-2/3 space-y-[var(--spacing-m)] gap-[var(--spacing-l)]"
    >
      <div class="description-2 space-y-4">
        <p class="ty-body-1 text-[color:var(--color-neutral-700)]">
          {description}
        </p>
      </div>

      <div class="link-2 flex items-center gap-2 pt-[var(--spacing-s)]">
        <span class="text-[var(--color-brand-swiss)] hover:underline font-bold">
          {linkLabel}
        </span>
        <img
          src="images/arrow_outward_2.svg"
          loading="lazy"
          alt=""
          class="w-4 h-4"
        />
      </div>
    </div>
  </div>
</a>
